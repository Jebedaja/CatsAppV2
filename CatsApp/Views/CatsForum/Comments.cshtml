@model List<CatsForum.Models.Comment>

<h1>Cats Forum</h1>

@foreach (var comment in Model)
{
    <div>
        <p><strong>@comment.AuthorName</strong>: @comment.Content</p>
    </div>
}

<hr />

<h2>Add Comment</h2>
<form asp-controller="CatsForum" asp-action="AddComment" method="post" class="comment-form">
    <div class="form-group">
        <label for="authorName">Author Name:</label>
        <input type="text" id="authorName" name="AuthorName" required class="form-control" />
        @if (Model.Count > 0)
        {
            <div class="text-danger">@Html.ValidationMessageFor(model => model[0].AuthorName)</div>
        }
    </div>
    <div class="form-group">
        <label for="content">Content:</label>
        <textarea id="content" name="Content" required class="form-control"></textarea>
        @if (Model.Count > 0)
        {
            <div class="text-danger">@Html.ValidationMessageFor(model => model[0].Content)</div>
        }
    </div>
    <button type="submit" class="btn btn-primary">Add Comment</button>
    @Html.ValidationSummary()
</form>

<link rel="stylesheet" href="~/css/Forum.css" />


